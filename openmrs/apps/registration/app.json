{
    "id": "bahmni.registration",
    "instanceOf": "bahmni.template.registration",
    "description": "Bahmni Patient Registration App",
    "extensionPoints": [
        {
            "id": "org.bahmni.registration.patient.search.result.action",
            "description": "Bahmni Patient Search Result Action"
        },
        {
            "id": "org.bahmni.registration.patient.next",
            "description": "After Bahmni Patient Registration, forward url configuration"
        }
    ],
    "contextModel": [
        "patientUuid",
        "activeVisitUuid"
    ],
    "config": {
        "patientInformation": {
            "additionalPatientInformation": {
                "title": "Additional Patient Information",
                "attributes": [
                    "primaryContact",
                    "saphoneNumber",
                    "isUrban",
                    "distanceFromCenter",
                    "Age",
                    "Sex",
                    "ART_Number"
                ]
            },
            "mdr-tb":{
                "title": "MDR-TB",
                "translationKey":"MDR_TB_SECTION",
                "attributes":["education"],
                "order": 1
            },
            "hidden": {
                "attributes": [
                    "isUrban",
                    "Age",
                    "Sex",
                    "ART_Number"
                ]
            },
            "defaults": {
                "class": "General",
                "landHolding": 2
            }
        },
        "addressHierarchy": {
            "showAddressFieldsTopDown": false,
            "strictAutocompleteFromLevel": "stateProvince"
        },
        "relationshipTypeMap": {
            "Doctor": "provider",
            "Parent": "patient"
        },
        "autoCompleteFields": [
            "familyName",
            "caste"
        ],
        "defaultIdentifierPrefix": "B1011",
        "defaultVisitType": "ARV Drug Pickup",
        "searchByIdForwardUrl": "/patient/{{patientUuid}}",
        "showMiddleName": true,
        "showLastName": true,
        "isLastNameMandatory": true,
        "showBirthTime": false,
        "showEnterID": false,
        "disablePhotoCapture": true,
        "showCasteSameAsLastNameCheckbox": false,
        "printOptions": [
            {
                "translationKey": "REGISTRATION_PRINT_REG_CARD_KEY_LS",
                "templateUrl": "/bahmni_config/openmrs/apps/registration/registrationCardLayout/printWithBarcode.html",
                "shortcutKey": "c"
            }
        ],
        "conceptSetUI": {
            "REGISTRATION FEES": {
                "required": false,
                "label": "Fee"
            },
            "FHS": {
                "buttonSelect": true
            },
            "defaults": {
                "FHS": "Present"
            },
            "WEIGHT": {
                "required": false
            },
            "HEIGHT": {
                "required": false
            },
            "TB Status": {
                "required": false
            },
            "TB Suspect signs": {
                "multiSelect": true
            }
        },
        "fieldValidation": {
            "primaryContact": {
                "pattern": "[0-9]{8}",
                "errorMessage": "Should be 8 characters"
            },
            "phoneNumber": {
                "pattern": "[0-9]{8}",
                "errorMessage": "Should be 8 characters"
            },
            "saphoneNumber": {
                "pattern": "27[0-9]{9}",
                "errorMessage": "Should be 11 characters starting with 27 as the country code"
            },
            "landHolding": {
                "pattern": "[0-9]{0,3}",
                "errorMessage": "Should be between 1 to 999 acres"
            },
            "familyName": {
                "pattern": "[a-zA-Z]{0,}",
                "errorMessage": "Should contain characters"
            },
            "givenName": {
                "pattern": "[a-zA-Z]{0,}",
                "errorMessage": "Should contain characters"
            },
            "middleName": {
                "pattern": "[a-zA-Z]{0,}",
                "errorMessage": "Should contain characters"
            }
        },
        "patientSearch": {
            "address": {
                "label": "Village",
                "placeholder": "Enter village name",
                "field": "city_village"
            },
            "customAttributes": {
                "label": "Relative/Phone",
                "placeholder": "Relative or phone number",
                "fields": [
                    "primaryRelative",
                    "telephoneNumber",
                    "primaryContact",
                    "saphoneNumber",
                    "givenNameLocal",
                    "familyNameLocal",
                    "middleNameLocal",
                    "extraAddressInfo",
                    "mothersMaidenSurname"
                ]
            },
            "searchByPatientIdentifier": true
        }
    }
}